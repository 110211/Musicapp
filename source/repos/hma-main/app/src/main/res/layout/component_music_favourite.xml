<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".common.component.MusicThumbnailWithInfoComponent">

    <ImageView
        android:id="@+id/song_image"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher_foreground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tv_songName"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginTop="5dp"
        android:text="Song Name"
        android:gravity="center_vertical"
        style="@style/filter"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/btn_add_favourite"
        app:layout_constraintStart_toEndOf="@+id/song_image"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_songArtist"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:text="Artist"
        android:gravity="center_vertical"
        android:textSize="14sp"
        style="@style/artist_name"
        app:layout_constraintBottom_toBottomOf="@+id/song_image"
        app:layout_constraintEnd_toStartOf="@+id/btn_add_favourite"
        app:layout_constraintStart_toEndOf="@+id/song_image"
        app:layout_constraintTop_toBottomOf="@+id/tv_songName" />

    <Button
        android:id="@+id/btn_add_favourite"
        android:layout_width="40dp"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="5dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/btn_add_farvourite"
        app:layout_constraintBottom_toBottomOf="@+id/btn_add_favourite"

        app:layout_constraintEnd_toEndOf="@+id/btn_add_favourite"
        app:layout_constraintStart_toStartOf="@+id/btn_add_favourite"
        app:layout_constraintTop_toTopOf="@+id/btn_add_favourite" />
</androidx.constraintlayout.widget.ConstraintLayout>
